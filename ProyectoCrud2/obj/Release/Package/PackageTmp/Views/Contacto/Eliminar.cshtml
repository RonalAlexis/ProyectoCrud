@model ProyectoCrud2.Models.Contacto

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar contacto</h4>
            </div>
            <div class="panel-body">

                <div class="alert alert-danger" >

                  ¿ Desea eliminar a: @Html.DisplayTextFor(m=>m.Nombres) @Html.DisplayTextFor(m=>m.Apellido) ?

                </div>
               
                <form action="@Url.Action("Eliminar","Contacto")" method="post">
                    <input type="hidden" class="form-control" name="Idcontacto" value="@Html.DisplayTextFor(m=> m.Idcontacto)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-success" href="@Url.Action("Inicio","Contacto")">Volver</a>

                </form>
</div>
        </div>
    </div>

</div>

